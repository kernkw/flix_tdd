<article>
    <header>
    <strong><h2><%= @movie.title %></h2></strong>
    </header>
      <p>
        <%= @movie.description %>
      </p>
      <div class="table-responsive">
        <table class="table">
          <tr>
          <strong><th>Released:</th></strong>
            <td><%= time_ago_in_words(@movie.released_on) %></td>
          </tr>
          <tr>
            <strong><th>Rating:</th></strong>
            <td><%= @movie.rating %></td>
          </tr>
          <tr>
            <strong><th>Total Gross:</th></strong>
            <td><%= flop(@movie.total_gross) %></td>
          </tr>
        </table>
       </div>
  </article>

<%= link_to "All Movies", movies_path %>

