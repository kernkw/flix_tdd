<h1><%= pluralize(@movies.size, 'Movie') %> </h1>

<% @movies.each do |movie| %>
  <header>
    <strong><h2><%= link_to movie.title, movie_path(movie.id) %></h2></strong>
  </header>
    <p>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <div class="table-responsive">
      <table class="table">
        <tr>
          <strong><th>Released:</th></strong>
            <td><%= time_ago_in_words(movie.released_on) %></td>
          </tr>
          <tr>
            <strong><th>Rating:</th></strong>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <strong><th>Total Gross:</th></strong>
            <td><%= flop(movie.total_gross) %></td>
          </tr>
      </table>
    </div>
<% end %>

